<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <display-name>Турагенство путь в EPAM</display-name>

    <display-name>Турагенство путь в EPAM</display-name>


    <!-- CONTROLLER:DispatcherController -->
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>controller.DispatcherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

    <!-- CONTROLLER:TourListController -->
    <servlet>
        <servlet-name>TourListController</servlet-name>
        <servlet-class>controller.TourListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TourListController</servlet-name>
        <url-pattern>/user/tour-list.html</url-pattern>
    </servlet-mapping>

    <!-- CONTROLLER:TourEditController -->
    <servlet>
        <servlet-name>tour-edit</servlet-name>
        <servlet-class>controller.TourEditController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tour-edit</servlet-name>
        <url-pattern>/user/tour-edit.html</url-pattern>
    </servlet-mapping>

    <!-- Internationalization -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>messages</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>